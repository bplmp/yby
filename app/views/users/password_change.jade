extends ../layouts/default-static

block main


block content
	section#login
		.login-content
			h1=title
			include ../includes/messages
			.login-form
				form.form-horizontal(action="/#{token.type}/#{token._id}", method="post", role="form")
					p.col-sm-offset-2.error= message

					.form-group
						label.col-sm-2.control-label(for="password") Nova senha
						.col-sm-10
							input#password.form-control(type="password", placeholder="Digite sua nova senha", name="password")

					.form-group
						.col-sm-offset-2.col-sm-10
							button.btn.btn-primary(type='submit') Alterar senha